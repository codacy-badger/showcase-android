<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium"
    android:background="@color/white"
    android:elevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/propertyImageView"
            android:layout_width="190dp"
            android:layout_height="160dp"
            android:contentDescription="@null"
            android:paddingStart="@dimen/large"
            android:paddingTop="@dimen/medium"
            android:paddingEnd="@dimen/large"
            android:paddingBottom="@dimen/medium"
            android:src="@drawable/ic_img_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/medium"
            android:paddingTop="@dimen/large"
            android:paddingEnd="@dimen/medium"
            android:textColor="@color/purple"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/propertyImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Contact Agent" />

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:paddingStart="@dimen/medium"
            android:paddingTop="@dimen/small"
            android:paddingEnd="@dimen/medium"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/propertyImageView"
            app:layout_constraintTop_toBottomOf="@+id/priceTextView"
            tools:text="3 bed, 2 bath, 4 car" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/medium"
            android:paddingTop="@dimen/small"
            android:paddingEnd="@dimen/medium"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/propertyImageView"
            app:layout_constraintTop_toBottomOf="@+id/detailsTextView"
            tools:text="51 Imperial Avenue, Bondi" />

        <ImageView
            android:id="@+id/agencyLogoImageView"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginEnd="@dimen/large"
            android:layout_marginTop="@dimen/medium"
            android:layout_marginBottom="@dimen/large"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/propertyImageView"
            app:layout_constraintTop_toBottomOf="@+id/addressTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
